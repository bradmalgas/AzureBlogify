{
    "trailingSlash": "auto",
    "routes": [
      {
        "route": "/",
        "rewrite": "/index.html"
      },
      {
        "route": "/about",
        "rewrite": "/index.html"
      },
      {
        "route": "/post/*",
        "rewrite": "/index.html"
      },
      {
        "route": "/api/*"
      },
      {
        "route": "/test404",
        "rewrite": "/404.html"
      }
    ],
    "navigationFallback": {
      "rewrite": "/index.html",
      "exclude": ["/api/*", "/images/*.{png,jpg,gif}", "/css/*"]
    },
    "responseOverrides": {
      "404": {
        "rewrite": "/404.html"
      }
    }
  }
  