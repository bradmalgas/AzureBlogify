{
  "trailingSlash": "auto",
  "routes": [
    {
      "route": "/"
    },
    {
      "route": "/about"
    },
    {
      "route": "/post/:category/:id"
    },
    {
      "route": "/api/*",
      "methods": ["GET"]
    },
    {
      "route": "/api/*",
      "methods": ["GET", "PUT", "POST", "PATCH", "DELETE"],
      "allowedRoles": ["administrator"]
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html"
  }
}
